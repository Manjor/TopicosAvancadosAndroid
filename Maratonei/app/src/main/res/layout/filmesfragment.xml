<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/fundojornal2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:scrollbars="none">

                    <Button
                        android:id="@+id/btnCartaz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="@string/catCartaz"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnAcao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="@string/catAcao"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnAnimacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="@string/catAnimacao"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnComedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="@string/catComedia"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnTerror"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="@string/catTerror"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnGuerra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="@string/catGuerra"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnFiccao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="Ficção"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/btnDrama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/roboto"
                        android:text="Drama"
                        android:textColor="@color/cinzaTexto"
                        android:textSize="10sp"
                        android:typeface="normal" />
                </LinearLayout>
            </HorizontalScrollView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleFilmes"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>